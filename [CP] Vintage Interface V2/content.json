{
    "Format": "1.3",
    "ConfigSchema":
    {
        "Billboard":
        {
            "AllowValues": "true, false"
        },
        "DigSpot":
        {
            "AllowValues": "red, pink, disabled"
        },
        "Font":
        {
            "AllowValues": "enabled, disabled"
        },

    },

    "Changes": [

        // LooseSprites replacements

        {
            "Action": "Load",
            "Target": "LooseSprites/Billboard",
            "FromFile": "assets/Billboard.png",
            "When":
            {
                "Billboard": "true",
            },

        },
        {
            "Action": "Load",
            "Target": "LooseSprites/chatbox",
            "FromFile": "assets/chatbox.png",
        },
        {
            "Action": "Load",
            "Target": "LooseSprites/DialogBoxGreen",
            "FromFile": "assets/dialogboxgreen.png"
        },
        {
            "Action": "Load",
            "Target": "LooseSprites/JunimoNote",
            "FromFile": "assets/junimonote.png"
        },
        {
            "Action": "EditImage",
            "Target": "LooseSprites/letterBG",
            "FromFile": "assets/letterBG.png",
        },
        {
            "Action": "Load",
            "Target": "LooseSprites/textBox",
            "FromFile": "assets/textbox.png"
        },
		        {
            "Action": "Load",
            "Target": "LooseSprites/daybg",
            "FromFile": "assets/daybg.png"
        },
		        {
            "Action": "Load",
            "Target": "LooseSprites/nightbg",
            "FromFile": "assets/nightbg.png"
        },

        // Map replacements

        {
            "Action": "Load",
            "Target": "Maps/MenuTiles",
            "FromFile": "assets/menutiles.png"
        },

        // Minigames replacements

        {
            "Action": "Load",
            "Target": "Minigames/TitleButtons",
            "FromFile": "assets/titlebuttons.png"
        },

		// Fonts
		{
			 "LogName": "font_bold",
			 "Action": "Load",
			 "Target": "LooseSprites/font_bold",
			 "FromFile": "assets/font_bold.png",
			 "When":
             {
                 "Font": "enabled"
             },
		},
		{
			 "LogName": "SmallFont",
			 "Action": "Load",
			 "Target": "Fonts/SmallFont",
			 "FromFile": "assets/SmallFont.xnb",
             "When":
             {
                 "Font": "enabled"
             },
		},
		{
			 "LogName": "SpriteFont1",
			 "Action": "Load",
			 "Target": "Fonts/SpriteFont1",
			 "FromFile": "assets/SpriteFont1.xnb",
             "When":
             {
                 "Font": "enabled"
             },
		},
		{
			 "LogName": "tinyFont",
			 "Action": "Load",
			 "Target": "Fonts/tinyFont",
			 "FromFile": "assets/tinyFont.xnb",
             "When":
             {
                 "Font": "enabled"
             },
		},
		{
			 "LogName": "tinyFontBorder",
			 "Action": "Load",
			 "Target": "Fonts/tinyFontBorder",
			 "FromFile": "assets/tinyFontBorder.xnb",
             "When":
             {
                 "Font": "enabled"
             },
		},

        // Begin cursors edits

        {
            "LogName": "Cursors",
            "Action": "EditImage",
            "Target": "LooseSprites/Cursors",
            "FromFile": "assets/cursors.png",
            "PatchMode": "Overlay"
        },
        {
            "LogName": "DigSpot",
            "Action": "EditImage",
            "Target": "LooseSprites/Cursors",
            "FromFile": "assets/digspot_pink.png",
            "ToArea":
            {
                "X": 368,
                "Y": 32,
                "Width": 64,
                "Height": 16
            },
            "When":
            {
                 "DigSpot": "pink"
            },
            "PatchMode": "Replace"
        },
        {
            "LogName": "DigSpot",
            "Action": "EditImage",
            "Target": "LooseSprites/Cursors",
            "FromFile": "assets/digspot_red.png",
            "ToArea":
            {
                "X": 368,
                "Y": 32,
                "Width": 64,
                "Height": 16
            },
            "When":
            {
                 "DigSpot": "red"
            },
            "PatchMode": "Replace"
        },

    ]
}